# ROSCA 生產環境配置
# 請複製此檔案為 .env.prod 並修改相應設定

# 資料庫設定
DB_ROOT_PASSWORD=your-super-strong-root-password-change-me
DB_NAME=rosca_db
DB_USER=rosca_user
DB_PASSWORD=your-strong-database-password-change-me

# .NET Core 環境設定
ASPNETCORE_ENVIRONMENT=Production

# JWT 設定 (生產環境必須修改)
JWT_SECRET_KEY=your-super-secret-jwt-key-at-least-32-characters-long-change-in-production
JWT_ISSUER=ROSCA-API-Production
JWT_AUDIENCE=ROSCA-Client-Production
JWT_EXPIRY_MINUTES=1440

# CORS 設定 (限制為實際域名)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# 檔案上傳設定
FILE_UPLOAD_MAX_SIZE=10485760
FILE_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf

# Hangfire 設定 (生產環境建議關閉 Dashboard)
HANGFIRE_DASHBOARD_ENABLED=false

# 日誌等級 (生產環境建議使用 Warning 或 Error)
LOG_LEVEL=Warning

# SSL 設定 (如果使用 HTTPS)
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# 備份設定
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# 監控設定
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# 安全設定
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# 快取設定
REDIS_ENABLED=false
REDIS_CONNECTION_STRING=localhost:6379

# 郵件設定 (如果需要)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=ROSCA System

# 第三方服務設定
# SMS 服務
SMS_PROVIDER=
SMS_API_KEY=
SMS_API_SECRET=

# 支付服務
PAYMENT_PROVIDER=
PAYMENT_API_KEY=
PAYMENT_API_SECRET=
PAYMENT_WEBHOOK_SECRET=

# 雲端存儲 (如果使用)
CLOUD_STORAGE_PROVIDER=
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_ACCESS_KEY=
CLOUD_STORAGE_SECRET_KEY=
CLOUD_STORAGE_REGION=

# 效能設定
MAX_CONCURRENT_REQUESTS=1000
CONNECTION_POOL_SIZE=100
QUERY_TIMEOUT_SECONDS=30

# 維護模式
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=系統維護中，請稍後再試