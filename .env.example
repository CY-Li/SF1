# 資料庫配置
DB_ROOT_PASSWORD=your_root_password_here
DB_NAME=rosca2
DB_USER=your_db_user_here
DB_PASSWORD=your_db_password_here

# 後端 API 配置
ASPNETCORE_ENVIRONMENT=Development
API_BASE_URL=http://localhost/api

# JWT 設定
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-environment
JWT_ISSUER=ROSCA-API
JWT_AUDIENCE=ROSCA-Client
JWT_EXPIRY_MINUTES=60

# CORS 設定
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:8080

# 檔案上傳設定
FILE_UPLOAD_MAX_SIZE=10485760
FILE_UPLOAD_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf

# Hangfire 設定
HANGFIRE_DASHBOARD_ENABLED=true

# 日誌設定
LOG_LEVEL=Information

# 前端配置
FRONTEND_API_URL=http://localhost/api

# 後台管理系統配置
ADMIN_API_URL=http://localhost:8080/api